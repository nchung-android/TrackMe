<resources>
    <!-- Base application theme. -->
    <style name="TrackMe.Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="actionModeBackground">@android:color/transparent</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_back</item>
        <item name="actionModeCloseButtonStyle">@style/TrackMe.Widget.ActionButton.Close</item>
        <item name="dialogTheme">@style/TrackMe.Theme.MaterialDialog</item>
        <item name="toolbarStyle">@style/TrackMe.Theme.Toolbar</item>
        <item name="colorDrawableTint">@color/colorDrawableTint</item>
        <item name="colorRipple">@color/ripple</item>
        <item name="colorRippleAccent">@color/rippleAccent</item>
        <item name="btnDialogPrimary">@color/colorAccent</item>
        <item name="tcDialogButtonPrimary">@color/textDialogButtonPrimary</item>
        <item name="tcDialogButtonSecondary">@color/textDialogButtonSecondary</item>
    </style>

    <style name="TrackMe.Theme.MaterialDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="TrackMe.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TrackMe.Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
